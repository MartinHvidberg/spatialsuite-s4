  <!-- Everything necessary for septimaSearch search control -->
  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/septimasearch"/>
  <copyfile fromfile="[module:s4.dir]/septimasearch/0.1/septimasearch-0.1.min.js" tofile="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/septimasearch-0.1.min.js"/>

  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/css"/>
