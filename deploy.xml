  <copyfile fromfile="[module:s4.dir]/septimasearch/0.1/css/better-autocomplete.css" tofile="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/css/better-autocomplete.css"/>

  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/css"/>
  <copyfile fromfile="[module:s4.dir]/css/s4.css" tofile="[cbinfo.wwwroot.dir]/modules/s4/css/s4.css"/>

  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/css/images"/>
  <copyfile fromfile="[module:s4.dir]/septimasearch/0.1/css/images/close_button.gif" tofile="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/css/images/close_button.gif"/>
  <copyfile fromfile="[module:s4.dir]/septimasearch/0.1/css/images/down.png" tofile="[cbinfo.wwwroot.dir]/modules/s4/septimasearch/css/images/down.png"/>
