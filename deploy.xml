<?xml version="1.0" encoding="UTF-8"?>
<deploy>
   <version>2.7.1</version>
   <stoponerror>true</stoponerror>
  
   <!-- Everything necessary for indexing and querying local data -->
   <param name="s4.config.dir">[cbinfo.misc.dir]/custom/s4</param>
   
   <makedir dir="[cbinfo.wwwroot.dir]/jsp/modules/s4"/>
   <copyfile fromfile="[module:s4.dir]/jsp/buildIndex.jsp" tofile="[cbinfo.wwwroot.dir]/jsp/modules/s4/buildIndex.jsp"/>
   <copyfile fromfile="[module:s4.dir]/jsp/getDatasources.jsp" tofile="[cbinfo.wwwroot.dir]/jsp/modules/s4/getDatasources.jsp"/>
   <copyfile fromfile="[module:s4.dir]/jsp/queryIndex.jsp" tofile="[cbinfo.wwwroot.dir]/jsp/modules/s4/queryIndex.jsp"/>

  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/css"/>
  <copyfile fromfile="[module:s4.dir]/css/s4.css" tofile="[cbinfo.wwwroot.dir]/modules/s4/css/s4.css"/>

  <makedir dir="[cbinfo.wwwroot.dir]/modules/s4/js"/>
  <copyfile fromfile="[module:s4.dir]/js/s4-plugin.js" tofile="[cbinfo.wwwroot.dir]/modules/s4/js/s4-plugin.js"/>
  <copyfile fromfile="[module:s4.dir]/js/s4IndexSearcher.js" tofile="[cbinfo.wwwroot.dir]/modules/s4/js/s4IndexSearcher.js"/>
  <copyfile fromfile="[module:s4.dir]/js/s4Searcher.js" tofile="[cbinfo.wwwroot.dir]/modules/s4/js/s4Searcher.js"/>

</deploy>